---
import type { Posts } from '@libs/application/dtos/post'

import PostCard from './PostCard.astro'

type Props = {
  posts: Posts
}

const { posts } = Astro.props
---

<div class="grid grid-cols-1 gap-y-8 md:grid-cols-2 md:gap-6 lg:gap-8">
  {
    posts.map((post) => (
      <PostCard
        title={post.title}
        category={post.category}
        coverImage={post.coverImage}
        date={post.date}
        slug={post.slug}
        excerpt={post.excerpt}
      />
    ))
  }
</div>
